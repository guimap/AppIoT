<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="179dp">

        <TextView
            android:id="@+id/alarm_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nenhum alarme definido"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.585" />

        <Button

            android:id="@+id/openTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:onClick="onTimeClicked"
            android:text="Criar Alarme"
            android:textAlignment="center" />

        <Button

            android:id="@+id/cancelAlarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:onClick="onCancelAlarm"
            android:text="Cancelar Alarme"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informe o IP da placa"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.585" />

        <EditText
            android:id="@+id/ipField"
            android:layout_width="401dp"
            android:layout_height="55dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="IP"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="450dp" />

        <Button

            android:id="@+id/saveIp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:onClick="onSaveIp"
            android:text="Salvar IP"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button

                android:id="@+id/lightOn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:onClick="onLightOn"
                android:text="Ligar lampada"
                android:textAlignment="center" />


            <Button
                android:id="@+id/lightOff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onLightOff"
                android:text="Desligar lampada"
                android:textAlignment="center" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>